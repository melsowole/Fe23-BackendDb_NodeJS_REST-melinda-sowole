<h1>Students</h1>

<section>
  <button class="toggle-create-form col-accent">
    <span class="material-symbols-outlined"> add </span>
    <b>Add Student</b>
  </button>

  <section class="create-form-wrapper">
    <h2>Add student</h2>
    <form action="" class="create">
      <div class="half">
        <div>
          <label for="fName">First name</label>
          <input required type="text" id="fName" name="fName" />
        </div>
        <div>
          <label for="lName">Last name</label>
          <input required type="text" id="lName" name="lName" />
        </div>
      </div>
      <div>
        <label for="town">Town</label>
        <input required type="text" id="town" name="town" />
      </div>

      <h3>Enroll in course</h3>

      <input type="submit" value="Add Student" class="rounded col-accent" />
    </form>
  </section>
</section>

